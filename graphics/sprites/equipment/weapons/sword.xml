<?xml version="1.0"?>
<sprite name="player" action="stand">
  <imageset name="sword" src="graphics/sprites/equipment/weapons/sword.png" width="64" height="64"/>
  <action name="default" imageset="sword"/>
  <action name="stand" imageset="sword">
    <animation direction="down">
      <frame index="0" offsetX="0" offsetY="4"/>
    </animation>
    <animation direction="left">
      <frame index="5" offsetX="5" offsetY="10"/>
    </animation>
    <animation direction="up">
      <frame index="8" offsetX="-1" offsetY="-4"/>
    </animation>
    <animation direction="right">
      <frame index="15" offsetX="-13" offsetY="6"/>
    </animation>
  </action>
  <action name="attack_1hand" imageset="sword">
    <animation direction="down">
      <sequence start="0" end="3" delay="100"/>
      <end/>
    </animation>
    <animation direction="left">
      <sequence start="4" end="7" delay="100"/>
      <end/>
    </animation>
    <animation direction="up">
      <sequence start="8" end="11" delay="100"/>
      <end/>
    </animation>
    <animation direction="right">
      <sequence start="12" end="15" delay="100"/>
      <end/>
    </animation>
  </action>
</sprite>
