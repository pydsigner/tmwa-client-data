<?xml version="1.0"?>
<sprite>
  <imageset name="base" src="graphics/sprites/npcs/penguin.png" width="20" height="21" />

  <action name="stand" imageset="base">
    <animation direction="down">
      <frame index="0" offsetX="20" delay="1500" />
      <frame index="2" offsetX="20" delay="200" />
    </animation>
    <animation direction="left">
      <frame index="44" offsetX="20" delay="1500" />
      <frame index="47" offsetX="20" delay="200" />      
    </animation>
    <animation direction="up">
      <frame index="32" offsetX="20" delay="1500" />
      <frame index="35" offsetX="20" delay="200" />      
    </animation>
    <animation direction="right">
      <frame index="20" offsetX="20" delay="1500" />
      <frame index="23" offsetX="20" delay="200" />
    </animation>
  </action>

  <action name="walk" imageset="base">
    <animation direction="down">
      <sequence offsetX="20" start="0" end="3" delay="200" />
    </animation>
    <animation direction="left">
      <sequence offsetX="20" start="44" end="47" delay="200" />
    </animation>
    <animation direction="up">
      <sequence offsetX="20" start="32" end="35" delay="200" />
    </animation>
    <animation direction="right">
      <sequence offsetX="20" start="20" end="23" delay="200" />
    </animation>
  </action>

  <action name="dead" imageset="base">
    <animation direction="down">
      <sequence offsetX="20" start="0" end="63" delay="10" />
      <frame index="0" offsetX="20" delay="10" />
    </animation>
    <animation direction="left">
      <sequence start="0" end="63" offsetX="20" delay="10" />
      <frame index="0" offsetX="20" delay="10" />
    </animation>
    <animation direction="up">
      <sequence start="0" end="63" offsetX="20" delay="10" />
      <frame index="0" offsetX="20" delay="10" />
    </animation>
    <animation direction="right">
      <sequence start="0" end="63" offsetX="20" delay="10" />
      <frame index="0" offsetX="20" delay="10" />
    </animation>
  </action>

  <action name="attack" imageset="base">
    <animation direction="down">
      <sequence start="1" end="2" delay="10" offsetX="20" />      
    </animation>
    <animation direction="left">
      <sequence start="45" end="46" delay="10" offsetX="20" />
    </animation>
    <animation direction="up">
      <sequence start="33" end="34" delay="10" offsetX="20" />
    </animation>
    <animation direction="right">
      <sequence start="20" end="21" delay="10" offsetX="20" />
    </animation>
  </action>

  <action name="attack_bow" imageset="base">
    <animation direction="down">
      <sequence start="1" end="2" delay="10" offsetX="20" />      
    </animation>
    <animation direction="left">
      <sequence start="45" end="46" delay="10" offsetX="20" />
    </animation>
    <animation direction="up">
      <sequence start="33" end="34" delay="10" offsetX="20" />
    </animation>
    <animation direction="right">
      <sequence start="20" end="21" delay="10" offsetX="20" />
    </animation>
  </action>

</sprite>
